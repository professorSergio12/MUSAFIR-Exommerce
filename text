 - name: Deploy to EC2
        uses: appleboy/ssh-action@v1.0.0
        with:
          host: ${{ secrets.EC2_HOST }}
          username: ubuntu
          key: ${{ secrets.EC2_KEY }}
          script: |
            cd ~/Musafir

            echo "Pulling latest images..."
            docker compose pull

            echo "Restarting containers..."
            docker compose down
            docker compose up -d

            echo "Deployment Complete ðŸŽ‰"